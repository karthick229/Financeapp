<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--  Active tab -->
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid
                android:color="@color/white"
                android:backgroundTint="@color/white"
                app:backgroundTint="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/grey" />
            <corners
                android:bottomRightRadius="6dp"
                android:bottomLeftRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid
                android:color="@color/white"
                android:backgroundTint="@color/white"
                app:backgroundTint="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/grey" />
            <corners
                android:bottomRightRadius="6dp"
                android:bottomLeftRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>
    <!--  Inactive tab -->
    <item android:state_focused="false"
        android:drawable="@drawable/bg_rect_no_focus" />

    <item android:state_enabled="false"
        android:drawable="@drawable/bg_rect_no_focus" />
</selector>